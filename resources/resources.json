{
    "pi": {
        "name": "Gjorup PI",
        "description": "a web of things connected raspberry pi for the course p2p",
        "port": 10503,
        "sensors": {
            "temperature": {
                "name": "Temperature Sensor",
                "description": "A dht11 temperature sensor",
                "unit": "Celsius",
                "value": 0,
                "gpio": 4
            },
            "humidity": {
                "name": "Humidity Sensor",
                "description": "A dht11 humidity sensor",
                "unit": "%",
                "value": 0,
                "gpio": 4
            },
            "distance": {
                "name": "Distance sensor",
                "description": "a Ultrasonic distance sensor",
                "unit": "Centimeter",
                "value": 0,
                "gpio.trigger": 23,
                "gpio.echo": 24
                 
            }
        },
        "actuators":    {
            "leds":  {
                "1": {
                    "name": "LED1",
                    "value": 2,
                    "gpio":  17
                    
                },
                "2": {
                    "name": "LED2",
                    "value": 2,
                    "gpio": 2
                    
                },
                "3": {
                    "name":"LED3",
                    "value": 2,
                    "gpio": 22
                    
                }
            }
        }
    }
}